<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/right_item_home_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/right_item_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ss"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/right_now_priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="¥ 10.00"
                android:textColor="@color/fab_red"
                />
            <TextView
                android:id="@+id/right_last_priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="¥ 10.00"
                android:textColor="#AAAAAA"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/right_reduce_priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="立减 ¥ 3.00"
            android:textColor="@color/fab_red"
            android:background="@drawable/textkuang"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</LinearLayout>
